@{
    ViewData["Title"] = "Login Page";
}

<div class="login-form">
    <form action="/" method="post"> 
        <div class="form-group">
            <input type="text" name="phoneNumber" class="form-control" placeholder="Telefon Numarası" required="required">
        </div>
        <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Şifre" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
        </div>
        <div class="clearfix">
            <a href="#" class="pull-right" onclick="getalert()" >Şifreni mi unuttun?</a>
        </div>
        @{
            if(ViewData["loginResponse"] == "wrongEntry")
            {
                <div class="alert alert-danger" role="alt">Telefon numarası veya şifre hatalı</div>
            }
        }        
    </form>
    <p class="text-center"><a href="#" onclick="getalert()">Hesap oluştur</a></p>
</div>