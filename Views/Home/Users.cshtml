@model IEnumerable<GuideOfTurkey_AdminPanel.Models.UserAccount>
@{
    ViewData["Title"] = "Kullanıcılar";
}

<div class="home">
    <nav class="sidenav" id="sidenav">
        <a href="#" id="close" class="close" onclick="closebarClicked()"></a>
        <a href="/home">Ana Sayfa</a>
        <a href="/users">Kullanıcılar</a>
        <a href="/sliders">Slider</a>
        <a href="/types">Mekan Tipleri</a>
        <a href="/cities">Ülkeler/Şehirler/İlçeler</a>
        <a href="/places">Yerler</a>
        <a href="#" onclick="exitClick()" >Çıkış Yap</a>
    </nav>
    <div class="main" id="menubar">
        <div class="menu-barContainer" onclick="menubarClicked()">
            <div class="menu-bar"></div>
            <div class="menu-bar"></div>
            <div class="menu-bar"></div>
        </div>
        <div class="mainScreen">
            <div style="width: 100%">
                <h3>Kullanıcı Listesi</h3>
                <hr stlye="height:1px; color:#111" />
                <div style="overflow-x: scroll; overflow-y: scroll; margin: 20px;" > 
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tam Adı</th>
                                <th>Telefon Numarası</th>
                                <th>Hesabın Açılma Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int x = 1;}
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@x</td>
                                    <td>@user.Fullname</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>@user.createdAt</td>
                                    <td>
                                        @{
                                            if(user.deleteState)
                                            {
                                                <button class="btn btn-success btn-xs" onclick="closeAccount(@user.ID)">Hesabı Aktif Et</button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-danger btn-xs" onclick="closeAccount(@user.ID)">Hesabı Deaktif Et</button>
                                            }
                                            x = x + 1;
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>